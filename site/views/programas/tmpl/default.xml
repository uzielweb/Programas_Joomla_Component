<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_PROGRAMAS_TITLE_LIST_VIEW_PROGRAMAS" option="View">
        <message>
                        <![CDATA[COM_PROGRAMAS_TITLE_LIST_VIEW_PROGRAMAS_DESC]]>
        </message>
	</layout>
    <!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">
			<field
				name="id"
				type="category"
				description="JGLOBAL_CHOOSE_CATEGORY_DESC"
				extension="com_programas"
				label="JGLOBAL_CHOOSE_CATEGORY_LABEL"
				required="true"
			/>
		</fieldset>
        </fields>

    <fields name="params">
		<fieldset name="item" label="JGLOBAL_CATEGORY_LAYOUT_DESC">
			<field name="link_titles" type="radio" class="btn-group btn-group-yesno" default="0" description="JGLOBAL_LINKED_TITLES_DESC" label="JGLOBAL_LINKED_TITLES_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
            <field name="link_broadcaster" type="radio" class="btn-group btn-group-yesno" default="1" description="COM_PROGRAMAS_BROADCASTER_LINK_DESC" label="COM_PROGRAMAS_BROADCASTER_LINK_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
            <field name="showintro" type="radio" class="btn-group btn-group-yesno" default="1" description="JGLOBAL_INTRO_TEXT" label="JGLOBAL_INTRO_TEXT">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
            <field name="showreadmore" type="radio" class="btn-group btn-group-yesno" default="1" description="JGLOBAL_SHOW_READMORE_DESC" label="JGLOBAL_SHOW_READMORE_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
		</fieldset>
	</fields>

</metadata>
